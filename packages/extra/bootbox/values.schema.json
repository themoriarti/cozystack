{
  "title": "Chart Values",
  "type": "object",
  "properties": {
    "machines": {
      "description": "Configuration of physical machine instances",
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "required": [
          "arch",
          "hostname",
          "ip",
          "leaseTime",
          "uefi"
        ],
        "properties": {
          "arch": {
            "description": "Architecture",
            "type": "string"
          },
          "hostname": {
            "description": "Hostname",
            "type": "string"
          },
          "ip": {
            "type": "object",
            "required": [
              "address"
            ],
            "properties": {
              "address": {
                "description": "IP address",
                "type": "object",
                "required": [
                  "address",
                  "gateway",
                  "netmask"
                ],
                "properties": {
                  "address": {
                    "description": "IP address",
                    "type": "string"
                  },
                  "gateway": {
                    "description": "IP gateway",
                    "type": "string"
                  },
                  "netmask": {
                    "description": "Netmask",
                    "type": "string"
                  }
                }
              }
            }
          },
          "leaseTime": {
            "description": "Lease time",
            "type": "integer"
          },
          "mac": {
            "description": "MAC addresses",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "nameServers": {
            "description": "Name servers",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "timeServers": {
            "description": "Time servers",
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "uefi": {
            "description": "UEFI",
            "type": "boolean"
          }
        }
      }
    },
    "whitelist": {
      "description": "List of client networks",
      "type": "array",
      "default": [],
      "items": {
        "type": "string"
      }
    },
    "whitelistHTTP": {
      "description": "Secure HTTP by enabling client networks whitelisting",
      "type": "boolean",
      "default": true
    }
  }
}
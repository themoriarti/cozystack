{
    "title": "Chart Values",
    "type": "object",
    "properties": {
        "external": {
            "type": "boolean",
            "description": "Enable external access from outside the cluster",
            "default": false
        },
        "size": {
            "type": "string",
            "description": "Persistent Volume size",
            "default": "10Gi"
        },
        "storageClass": {
            "type": "string",
            "description": "StorageClass used to store the data",
            "default": ""
        },
        "haproxy": {
            "type": "object",
            "properties": {
                "replicas": {
                    "type": "number",
                    "description": "Number of HAProxy replicas",
                    "default": 2
                },
                "resources": {
                    "type": "object",
                    "description": "Explicit CPU and memory configuration for each HAProxy replica. When left empty, the preset defined in `resourcesPreset` is applied.",
                    "default": {}
                },
                "resourcesPreset": {
                    "type": "string",
                    "description": "Default sizing preset used when `resources` is omitted. Allowed values: none, nano, micro, small, medium, large, xlarge, 2xlarge.",
                    "default": "nano",
                    "enum": [
                        "none",
                        "nano",
                        "micro",
                        "small",
                        "medium",
                        "large",
                        "xlarge",
                        "2xlarge"
                    ]
                }
            }
        },
        "nginx": {
            "type": "object",
            "properties": {
                "replicas": {
                    "type": "number",
                    "description": "Number of Nginx replicas",
                    "default": 2
                },
                "resources": {
                    "type": "object",
                    "description": "Explicit CPU and memory configuration for each nginx replica. When left empty, the preset defined in `resourcesPreset` is applied.",
                    "default": {}
                },
                "resourcesPreset": {
                    "type": "string",
                    "description": "Default sizing preset used when `resources` is omitted. Allowed values: none, nano, micro, small, medium, large, xlarge, 2xlarge.",
                    "default": "nano",
                    "enum": [
                        "none",
                        "nano",
                        "micro",
                        "small",
                        "medium",
                        "large",
                        "xlarge",
                        "2xlarge"
                    ]
                }
            }
        },
        "endpoints": {
            "type": "array",
            "description": "Endpoints configuration",
            "default": [],
            "items": {}
        }
    }
}
